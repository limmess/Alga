@using System.Activities.Expressions
@model IEnumerable<Alga.Models.Asmuo>

@{
    ViewBag.Title = "Sąrašas";
}

<h2>Sąrašas</h2>

<div><p></p></div>

<table id="table_id" class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Vardas)</th>
            <th>@Html.DisplayNameFor(model => model.Pavarde)</th>
            <th>@Html.DisplayNameFor(model => model.AlgaGross)</th>
            <th>Veiksmai</th>
            </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Vardas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pavarde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlgaGross)
            </td>
            <td>
                @Html.ActionLink("Detaliau", "Details", new { id = item.Id })
            </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function() {
            $("#table_id").DataTable({
                columnsDefs: [
                    {
                        targets: 2,
                        type: "num-fmt"
                     
                    }
                ],
                language: {
                    decimal: ","
                }
            });
        })
    </script>}
